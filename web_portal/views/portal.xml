    <template id="image_web">
        <t t-call="website.layout">
            <section>
                <t t-foreach="image_ids" t-as="image">
                    <div>
                        <div>
                            <t t-esc="image.classroom_name"/>
                        </div>
                        <div class="image-container">
                            <t t-foreach="image.room_image.ids" t-as="im">
                                <div class="image-wrapper">
                                    <img t-att-src="'/web/image/' + str(im) + '/image'" alt="Image"
                                         style="padding:50px;" class="image"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                    <script type="text/javascript">
                        $(document).ready(function() {
                        // Zoom image on click
                        $('.image').click(function() {
                        $(this).toggleClass('zoomed');
                        });

                        // Reset zoom on cursor hover
                        $('.image').hover(function() {
                        $(this).removeClass('zoomed');
                        });
                        $('.image-container').on('swipeleft', function() {
                        // Calculate scroll distance and animate container
                        $(this).animate({ scrollLeft: '+=200' }, 'slow');
                        });

                        $('.image-container').on('swiperight', function() {
                        // Calculate scroll distance and animate container
                        $(this).animate({ scrollLeft: '-=200' }, 'slow');
                        });
                        });
                    </script>
                </t>
            </section>
        </t>
        <style>
            .image-container {
            width: 100%;
            height: 300px;
            overflow-x: scroll;
            white-space: nowrap;
            }

            .image-wrapper {
            display: inline-block;
            height: 100%;
            margin-right: 10px;

            }
            .image{
            max-width:100%;
            max-height:100%;
            }
            .zoomed {
            transform: scale(3);
            z-index: 9999;
            }
        </style>
    </template>

